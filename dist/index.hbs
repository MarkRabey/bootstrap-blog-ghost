{{!< default}}
{{#contentFor "metaTitle"}}{{@blog.title}} | {{@blog.description}}{{/contentFor}}
<header id="main-header" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
	<div class="header-main">
		<div class="header-main-inner">
			<div class="header-main-content">
				{{#if @blog.logo}}<img src="{{@blog.logo}}" alt="{{@blog.title}}" />{{/if}}
				<h1 class="blog-title"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
				<hr class="divider-primary">
				<p class="blog-description">{{@blog.description}}</p>
				<hr class="divider-secondary">
				<div class="header-social">
					<ul>
						<li><a href="http://twitter.com/WideAsleepDad" target="_blank"><span class="fa fa-twitter"></span></a></li>
						<li><a href="http://github.com/MarkRabey" target="_blank"><span class="fa fa-github"></span></a></li>
						<li><a href="http://facebook.com/markrabey1983" target="_blank"><span class="fa fa-facebook"></span></a></li>
						<li><a href="mailto:hello@markrabey"><span class="fa fa-envelope"></span></a></li>
					</ul>
				</div>
				<div class="header-links">
					<ul>
						<li><a href="{{@blog.url}}" class="btn btn-outline btn-lg">Blog</a></li>
						<li><a href="/about" class="btn btn-outline btn-lg">About</a></li>
					</ul>
				</div>
			</div>
		</div>
		<div class="header-overlay"></div>
	</div>
</header>

<section class="container">
	{{#foreach posts}}
		<article role="article" itemscope itemtype="http://schema.org/BlogPosting" class="post">
			<header>
				<h2><a href="{{url}}">{{{title}}}</a></h2>
			</header>
			<p>
				{{excerpt}}&hellip;
			</p>
			<section class="post-meta">
				<time itemprop="dateCreated" datetime="{{date format='MMMM DD, YYYY'}}">{{date format='MMMM DD, YYYY'}}</time> &bull; {{tags prefix="on "}}
			</section>
		</article>
	{{/foreach}}
</section>

<section class="container">
	{{pagination}}
</section>
