{{!< default}}
<article role="article" itemscope itemtype="http://schema.org/BlogPosting" class="post container">
  {{#post}}
    {{#contentFor "metaTitle"}}{{title}} | {{@blog.title}}{{/contentFor}}
    {{#contentFor "metaDescription"}}{{excerpt characters="155"}}&hellip;{{/contentFor}}
    {{#contentFor "metaKeywords"}}{{tags autolink="false"}}{{#if meta_keywords}}, {{meta_keywords}}{{else}}, {{@blog.title}},{{@blog.description}}{{/if}}{{/contentFor}}

     <header class="page-header">
      <div class="post-meta">
        <time itemprop="datePublished" datetime="{{date}}">
          Published {{date published_at timeago="true"}}
        </time> | {{tags}}
      </div>
      <h1 itemprop="headline">{{title}}</h1>
    </header>
    <section itemprop="articleBody">
      {{content}}
    </section>
  {{/post}}
</article>
{{> comments}}